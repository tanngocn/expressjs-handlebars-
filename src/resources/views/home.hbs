<div class="mt-4">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-md-4 col-lg-4 mb-2">
        <div class="card" style="width: 18rem;">
          <a href="/courses/{{this.slug}}">
            <img
              src="{{this.image}}"
              class="card-img-top"
              alt="{{this.name}}"
            />
          </a>
          <div class="card-body">
            <a href="/courses/{{this.slug}}">
              <h6 class="card-title">{{this.name}}</h6>
            </a>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Register</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>